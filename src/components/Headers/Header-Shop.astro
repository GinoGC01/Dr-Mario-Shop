    <ul class="ul">
        <li><button class="button btn-active">
            <span class="material-symbols-outlined span spn-active">change_history</span>
            Todos los artículos
        </button></li>

        <li><button class="button" >
            <span class="material-symbols-outlined span">change_history</span>
            Buzos
        </button></li>

        <li><button class="button">
            <span class="material-symbols-outlined span">change_history</span>
            Camperas
        </button></li>

        <li><a>
            <span class="material-symbols-outlined">shopping_cart</span>
            <span id="numero-articulos">0</span>
        </a></li>

    </ul>
</nav>

<script>

    const botonesCaterogias = document.querySelectorAll('.button');
    const spanBotonesCategorias = document.querySelectorAll('.span')

    botonesCaterogias.forEach(boton => {
        boton.addEventListener('click', (e:any)=>{

            spanBotonesCategorias.forEach(span =>{
                span.classList.remove('spn-active');
            })

            botonesCaterogias.forEach(boton =>{
                boton.classList.remove('btn-active')
            })

            // currentTarget señala el elemento al que se le aplica el evento

            e.currentTarget.classList.add('btn-active')
            
            
            // Agrega la clase "spn-active" al span dentro del botón seleccionado
            const span = e.currentTarget.querySelector('span');
            if (span) {
            span.classList.add('spn-active');
            }

        })
    })

</script>

<style>
    :root{
        --black:rgb(12, 12, 12);
        --white: rgb(245, 245, 245);
        --amarillo:rgb(255, 255, 40);

    }

    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        list-style: none;
        text-decoration: none;
        font-family: azonix, 'Orbitron', sans-serif;


    }

    nav{
        width: 100%;
        padding: 1em 0em;
        padding-left: 2em;
    }

    ul{
        width: 100%;
        display: flex;
        justify-content: space-between;
        flex-direction: column;
        gap: 1.5em;
    }

    li{
        width: 100%;
    }

    .button, a{
        display: flex;
        align-items: center;
        gap: .5em;
    }

    .button{
        width: 100%;
        text-align: start;
        background-color: transparent;
        border:none;
        color: var(--white);
        cursor: pointer;
        padding: 1em;
        transition: background-color ease-in-out .2s, color ease-in-out .2s;
    }

    .btn-active{
        background-color: var(--white);
        color: var(--black);
    }

    .span{
        transition: transform ease-in-out .2s;
    }

    .spn-active{
        transform: rotate(90deg);
    }


    a{
        width: 100%;
        color: var(--white);
        cursor: pointer;
        margin-top: 2em;
        padding: 1em;
    }

</style>